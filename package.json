{
  "name": "mars-nexus",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "vite build --mode analyze",
    "deploy": "npm run build && firebase deploy --only hosting --project mars-nexus",
    "deploy:hosting": "npm run build && firebase deploy --only hosting --project mars-nexus",
    "deploy:server": "gcloud builds submit --config server/cloudbuild.yaml --project mars-nexus",
    "deploy:database": "firebase deploy --only database --project mars-nexus",
    "emulators": "firebase emulators:start",
    "emulators:exec": "firebase emulators:exec",
    "emulators:export": "firebase emulators:export",
    "emulators:import": "firebase emulators:import",
    "sync-locales": "node scripts/sync-locales.js",
    "check-bundle-size": "node scripts/check-bundle-size.js",
    "compress-assets": "node scripts/compress-assets.js",
    "generate-manifest": "node scripts/generate-asset-manifest.js",
    "generate-atlas": "node scripts/generate-texture-atlas.js",
    "performance-benchmark": "node tests/performance/benchmarks.js",
    "prebuild": "npm run generate-manifest && npm run compress-assets && npm run generate-atlas"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.0",
    "colyseus.js": "^0.16.22",
    "firebase": "^12.6.0",
    "nipplejs": "^0.10.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "three": "^0.181.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.1",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "firebase-tools": "^14.26.0",
    "jest": "^30.2.0",
    "postcss": "^8.5.6",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.1.0",
    "web-vitals": "^5.1.0"
  }
}
