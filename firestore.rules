rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Player data - users can only read/write their own data
    match /players/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Guilds - members can read, leaders can write
    match /guilds/{guildId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (request.resource.data.leaderId == request.auth.uid || 
         resource.data.leaderId == request.auth.uid);
    }
    
    // Guild members
    match /guilds/{guildId}/members/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || 
        (isAuthenticated() && get(/databases/$(database)/documents/guilds/$(guildId)).data.leaderId == request.auth.uid);
    }
    
    // Market listings - anyone can read, authenticated users can create their own
    match /market/{listingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.sellerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
        (resource.data.sellerId == request.auth.uid || 
         request.resource.data.buyerId == request.auth.uid);
    }
    
    // Chat messages - authenticated users can read and create
    match /chat/{messageId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Quest progress - users can only access their own
    match /quests/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Battle pass progress - users can only access their own
    match /battlePass/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Achievements - users can only access their own
    match /achievements/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Housing data - users can only access their own
    match /housing/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Trading - participants can read/write
    match /trades/{tradeId} {
      allow read: if isAuthenticated() && 
        (resource.data.participant1Id == request.auth.uid || 
         resource.data.participant2Id == request.auth.uid);
      allow write: if isAuthenticated() && 
        (request.resource.data.participant1Id == request.auth.uid || 
         request.resource.data.participant2Id == request.auth.uid);
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

