rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the file
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // User avatars - users can upload/read their own, others can read
    match /avatars/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && 
        request.resource.size < 5 * 1024 * 1024 && // 5MB limit
        request.resource.contentType.matches('image/.*');
    }
    
    // User screenshots - users can upload/read their own
    match /screenshots/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) && 
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('image/.*');
    }
    
    // Guild banners - guild members can read, leaders can write
    match /guilds/{guildId}/banner/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        request.resource.size < 2 * 1024 * 1024 && // 2MB limit
        request.resource.contentType.matches('image/.*');
      // Note: Guild leader check would require Firestore lookup
      // For emulator, we'll allow authenticated users
    }
    
    // Character customization assets - users can upload/read their own
    match /customizations/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) && 
        request.resource.size < 1 * 1024 * 1024; // 1MB limit
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

